# Development Environment Variables
# Copy this file to .env.development and update with your development values

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_APP_TITLE=Persona AI Link (Dev)
VITE_APP_VERSION=1.0.0-dev

# Frontend port configuration
FRONTEND_DEV_PORT=5173

# Backend Configuration
BACKEND_PORT=3001
NODE_ENV=development

# External Database Configuration (Development)
# Update these with your development SQL Server details
EXTERNAL_DB_HOST=your-dev-sql-server
EXTERNAL_DB_PORT=1433
EXTERNAL_DB_NAME=PersonaAILink_Dev
EXTERNAL_DB_USER=your-dev-username
EXTERNAL_DB_PASSWORD=your-dev-password
EXTERNAL_DB_ENCRYPT=false
EXTERNAL_DB_TRUST_CERT=true

# Development Settings
JWT_SECRET=dev-jwt-secret-change-in-production
CORS_ORIGIN=http://localhost:5173

# Debugging
DEBUG=true
LOG_LEVEL=debug

# Docker Network Configuration
DOCKER_DEV_NETWORK_SUBNET=172.21.0.0/16

# Hot Reload Settings
WATCHPACK_POLLING=true
CHOKIDAR_USEPOLLING=true