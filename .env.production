# Production Environment Variables
# Copy this file to .env.production and update with your production values

# Frontend Configuration
VITE_API_URL=http://localhost:3006
VITE_APP_TITLE=Persona AI Link
VITE_APP_VERSION=1.0.0

# Docker Configuration
# Frontend port configuration for Docker containers
FRONTEND_PORT=8090
# Development port for Docker dev environment
FRONTEND_DEV_PORT=5173

# Backend port configuration
BACKEND_PORT=3006

# Network configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16
DOCKER_DEV_NETWORK_SUBNET=172.21.0.0/16



# Security Settings (for Docker Compose)
JWT_SECRET=your-production-jwt-secret
WEBHOOK_SECRET=your-production-webhook-secret
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-production-admin-password

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com

# Logging
LOG_LEVEL=info

# Node Environment
NODE_ENV=production