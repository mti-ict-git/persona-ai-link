# Production Environment Variables
# Copy this file to .env.production and update with your production values

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_APP_TITLE=Persona AI Link
VITE_APP_VERSION=1.0.0

# Frontend port configuration
FRONTEND_PORT=3000

# Backend Configuration
BACKEND_PORT=3001
NODE_ENV=production

# External Database Configuration (Production)
# Update these with your production SQL Server details
EXTERNAL_DB_HOST=your-production-sql-server
EXTERNAL_DB_PORT=1433
EXTERNAL_DB_NAME=PersonaAILink
EXTERNAL_DB_USER=your-production-username
EXTERNAL_DB_PASSWORD=your-production-password
EXTERNAL_DB_ENCRYPT=true
EXTERNAL_DB_TRUST_CERT=false

# Security Settings
JWT_SECRET=your-production-jwt-secret
CORS_ORIGIN=https://your-production-domain.com

# Logging
LOG_LEVEL=info

# Docker Network Configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16