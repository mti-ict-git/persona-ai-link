# Production Environment Variables
# Copy this file to .env.production and update with your production values

# Frontend Configuration
VITE_API_URL=http://localhost:3001
VITE_APP_TITLE=Persona AI Link
VITE_APP_VERSION=1.0.0

# Docker Configuration
# Frontend port configuration for Docker containers
FRONTEND_PORT=3000
# Development port for Docker dev environment
FRONTEND_DEV_PORT=5173

# Backend port configuration
BACKEND_PORT=3001

# Network configuration
DOCKER_NETWORK_SUBNET=172.20.0.0/16
DOCKER_DEV_NETWORK_SUBNET=172.21.0.0/16

# External Database Configuration (for Docker Compose)
# These are used by docker-compose.yml for external database connections
EXTERNAL_DB_HOST=your-production-sql-server
EXTERNAL_DB_PORT=1433
EXTERNAL_DB_NAME=PersonaAILink
EXTERNAL_DB_USER=your-production-username
EXTERNAL_DB_PASSWORD=your-production-password
EXTERNAL_DB_ENCRYPT=true
EXTERNAL_DB_TRUST_CERT=false

# Security Settings (for Docker Compose)
JWT_SECRET=your-production-jwt-secret
WEBHOOK_SECRET=your-production-webhook-secret
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-production-admin-password

# CORS Configuration
CORS_ORIGIN=https://your-production-domain.com

# Logging
LOG_LEVEL=info

# Node Environment
NODE_ENV=production